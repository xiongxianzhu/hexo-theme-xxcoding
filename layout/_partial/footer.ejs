<footer class="page-footer footer-color">
    <% if (theme.aplayer.enable && theme.aplayer.fixed) { %>
        <%- partial('_widget/aplayer') %>
    <% } %>
    <div class="container">
        <div class="row center">
            <div class="col l12 m12 s12">
                <div>
                    Powered by&nbsp;<a href="https://hexo.io/" target="_blank">Hexo</a>
                    |&nbsp;Theme&nbsp;<a href="https://github.com/xiongxianzhu/hexo-theme-xxcoding" target="_blank">xxcoding</a></div>
                <% if (theme.icp.enable) { %>
                <div id="icp">
                    <img src="<%- url_for('/img/icp.svg') %>" style="vertical-align: text-bottom;" />
                    <a href="<%- url_for(theme.icp.url) %>" target="_blank"><%- theme.icp.text %></a>
                </div>
                <% } %>
                <div>破网站已运行了</div>
            </div>
        </div>
    </div>
    <div class="footer-copyright">
        <div class="container center">
            Copyright&nbsp;&copy;
            <% if (theme.copyright.since && theme.copyright.since !== new Date().getFullYear()) { %>
                <span id="year"><%- theme.copyright.since %> - <%- new Date().getFullYear() %></span>
            <% } else { %>
                <span id="year"><%- theme.copyright.since %></span>
            <% } %>
            ,&nbsp;
            Made with <span style="color: red;">❤️</span> by 
            <a href="<%- url_for('/about') %>" target="_blank"><%- config.author %></a> for a better web.
        </div>
    </div>
</footer>
